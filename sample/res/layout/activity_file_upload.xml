<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/act__disclaimer"

        />

    <EditText
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://192.168.1.9:5000"
        android:hint="@string/act__urlhint"/>

    <Button
        android:id="@+id/btn_file_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/act__file_upload"
        />

    <Button
        android:id="@+id/btn_file_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/act__file_close"
        />

    <TextView
        android:id="@+id/lbl_file_upload_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/progressBarMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:visibility="gone"
        android:progress="1" />


</LinearLayout>